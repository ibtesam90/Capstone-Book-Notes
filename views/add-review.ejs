<%- include("partials/header.ejs") %>
<div class="container mt-5">
    <h2>Add Book Review</h2>
    <form action="/add-review" method="POST">

        <!-- Book Title -->
        <div class="form-group">
            <label for="title">Book Title:</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter book title" required autocomplete="off">
            <ul class="list-group" id="title-suggestions" style="position: absolute; z-index: 1000;"></ul>
        </div>

        <!-- Book Author -->
        <div class="form-group">
            <label for="author">Book Author:</label>
            <input type="text" class="form-control" id="author" name="author" placeholder="Enter book author" required>
        </div>

        <!-- Publishing Date -->
        <div class="form-group">
            <label for="publishingDate">Publishing Date:</label>
            <input type="date" class="form-control" id="publishingDate" name="publishingDate" required>
        </div>

        <!-- ISBN Number -->
        <div class="form-group">
            <label for="isbn">ISBN Number:</label>
            <input type="text" class="form-control" id="isbn" name="isbn" placeholder="Enter ISBN number" required>
        </div>

        <!-- Your Rating -->
        <div class="form-group">
            <label for="rating">Your Rating:</label>
            <div class="star-rating">
                <!-- Star rating code from previous response -->
                <div class="star-rating">
                    <input type="radio" id="star10" name="rating" value="10"><label for="star10" title="10 stars"><i class="fas fa-star"></i></label>
                    <input type="radio" id="star9" name="rating" value="9"><label for="star9" title="9 stars"><i class="fas fa-star"></i></label>
                    <input type="radio" id="star8" name="rating" value="8"><label for="star8" title="8 stars"><i class="fas fa-star"></i></label>
                    <input type="radio" id="star7" name="rating" value="7"><label for="star7" title="7 stars"><i class="fas fa-star"></i></label>
                    <input type="radio" id="star6" name="rating" value="6"><label for="star6" title="6 stars"><i class="fas fa-star"></i></label>
                    <input type="radio" id="star5" name="rating" value="5"><label for="star5" title="5 stars"><i class="fas fa-star"></i></label>
                    <input type="radio" id="star4" name="rating" value="4"><label for="star4" title="4 stars"><i class="fas fa-star"></i></label>
                    <input type="radio" id="star3" name="rating" value="3"><label for="star3" title="3 stars"><i class="fas fa-star"></i></label>
                    <input type="radio" id="star2" name="rating" value="2"><label for="star2" title="2 stars"><i class="fas fa-star"></i></label>
                    <input type="radio" id="star1" name="rating" value="1"><label for="star1" title="1 star"><i class="fas fa-star"></i></label>
                </div>
            </div>
        </div>

        <!-- Summary -->
        <div class="form-group">
            <label for="summary">Summary:</label>
            <textarea class="form-control" id="summary" name="summary" rows="3" placeholder="Enter a brief summary" required></textarea>
        </div>

        <!-- Detailed Notes -->
        <div class="form-group">
            <label for="notes">Detailed Notes:</label>
            <textarea class="form-control" id="notes" name="notes" rows="5" placeholder="Enter detailed notes" required></textarea>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


<%- include("partials/footer.ejs") %>